@model UniPath_MVC.Models.Class

@{
    Layout = null;
    ViewData["Title"] = Model.Name;
    var userId = Context.Session.GetInt32("UserId");

    if (userId == null)
    {
        Context.Response.Redirect("/Account/Login");
        return;
    }
    var studentsEnrolled = 2; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Name</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.png" />

    <link rel="stylesheet" href="~/css/class.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <div class="content-wrapper">
        <img src="/resources/images/class-banner.jpg" alt="Class Banner" class="showcase-image" />

        <div class="class-details-header">
            <div class="class-title-section">
                <h1>@Model.Name</h1>
                <p>@Model.Description</p>
            </div>
        </div>

        

       
        <div class="class-stats-container">
            <div class="class-stats-teacher">
                <div class="user-tag">
                    <img src="/resources/images/teacher-placeholder.jpg" alt="Teacher Profile" />
                    <span>@(Model.Teacher != null ? $"{Model.Teacher.FirstName} {Model.Teacher.LastName}" : "Unknown Teacher")</span>
                </div>
            </div>

            <div class="class-stats-students">
                <span>@studentsEnrolled @((studentsEnrolled > 1) ? "students" : "student") enrolled</span>
            </div>
        </div>

        <div class="class-capsule-section">
            <h4>Class Capsules</h4>
            @await Html.PartialAsync("_CapsuleList", ViewData["Capsules"])
        </div>
    </div>
</body>
</html>
